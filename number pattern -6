#include<stdio.h>
int main(){
    int rows,i,j,k;
    scanf("%d",&rows);
    k=1;
    for(i=1;i<=rows;i++){
        for(j=1;j<=rows;j++){
          if(k==1){
                printf("1");
            }
          else{
                printf("0");
            }
             k *= -1;
        }

        if(rows % 2 == 0)
        {
            k *= -1;
        }
        
        printf("\n");
    }
}
